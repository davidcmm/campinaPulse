//Saving user answer in Pybossa and requesting a new task
function saveAnswer(taskId, answerToSave) {
	pybossa.saveTask(taskId, answerToSave).done(function() {
		pybossa.newTask(app_shortname).done(function(data) {
			loadData(data);
		});
	});
}

//pybossa.presentTask(function(task, deferred) {
function loadData(data) {
    var task = data.task;
    taskLoaded(task);

    if ( !$.isEmptyObject(task) ) {
        loadUserProgress();
	
        //At each 10 questions answered check user profile information
	if (askForMoreInfo){
	      step = 1;
	      askForMoreInfo = false;
         
	      if(verifyUserData(task.app_id)){
		//alert("Estou habilitando 2");
		$("#modal").modal('show');
	      }
	}
      
          
      $('#photo-link').html('').append(task.info.left);
      $("#photo-link").attr("href", task.info.link);
      $('#photo-link2').html('').append(task.info.right);
      $("#photo-link2").attr("href", task.info.link);
      $('#task-id').html(task.id);
        
      //Left image chosen
      $('#photo').off('click').on('click', function(evt) {
        
        var question = perguntaAResponder;
        var answerToSave = userDataToSave+String(question) + " " + "Left" + " " + String(task.info.url_c) + " " + String(task.info.url_a);
        saveAnswer(task.id, answerToSave);
        /*pybossa.saveTask(task.id, answerToSave).done(function() {
          deferred.resolve();
        });*/
		
        $("#loading").fadeIn(500);
        if ($("#disqus_thread").is(":visible")) {
          $('#disqus_thread').toggle();
          $('.btn-disqus').toggle();
        }
        userDataToSave = "";
      });
      
      //Right image chosen
      $('#photo2').off('click').on('click', function(evt) {
        var question = perguntaAResponder;
        var answerToSave = userDataToSave+String(question) + " " + "Right" + " " + String(task.info.url_c) + " " + String(task.info.url_a);
        saveAnswer(task.id, answerToSave);
        /*pybossa.saveTask(task.id, answerToSave).done(function() {
          deferred.resolve();
        });*/
        
        $("#loading").fadeIn(500);
        if ($("#disqus_thread").is(":visible")) {
          $('#disqus_thread').toggle();
          $('.btn-disqus').toggle();
        }
        userDataToSave = "";
      });
      
             
      //Change question button clicked
      $('#changeQuest').off('click').on('click', function(evt) {
        showQuestionOptions = true;
        step = 0;
        if(showStep('init')){
          	$("#modal").modal('show');
        }
      });

      //User could not choose an image!      
      $('#notknown').off('click').on('click', function(evt) {
        var question = perguntaAResponder;
        var answerToSave = userDataToSave+String(question) + " " + "NotKnown" + " " + String(task.info.url_c) + " " + String(task.info.url_a);
        saveAnswer(task.id, answerToSave);
        /*pybossa.saveTask(task.id, answerToSave).done(function() {
          deferred.resolve();
        });*/
        $("#loading").fadeIn(500);
        if ($("#disqus_thread").is(":visible")) {
          $('#disqus_thread').toggle();
          $('.btn-disqus').toggle();
        }
        userDataToSave = "";
        
      });
      $("#loading").hide();
    }
    else {
        $(".skeleton").hide();
        $("#loading").hide();
        $("#finish").fadeIn(500);
    }
  
});

//pybossa.run('comoecampina');
//General configuration  
endpoint = "/pybossa";
app_shortname = "comoecampina";
pybossa.setEndpoint(endpoint);
pybossa.newTask(app_shortname).done(function(data) {
	loadData(data);
});
</script>

